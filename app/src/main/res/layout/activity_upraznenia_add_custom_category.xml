<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/upraznenia_add_custom_category_appbar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/upraznenia_add_custom_category_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/upraznenia_add_custom_category_listview"
        android:choiceMode="singleChoice"
        android:descendantFocusability="beforeDescendants"
        android:layout_below="@+id/upraznenia_add_custom_category_appbar"
        android:layout_alignParentStart="true" />


</RelativeLayout>