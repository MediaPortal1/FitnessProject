<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:backgroundTintMode="screen">
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/main_menu_gradient">

    <LinearLayout
        android:layout_marginTop="65dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/menu_linear1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:background="@drawable/main_choose_border"
            android:layout_margin="10dp">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageButton"
                android:src="@drawable/dumbbell_icon_96"
                android:background="@drawable/empty_bg"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Програмы тренировок"
                android:id="@+id/textView4"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_below="@+id/imageButton"
                android:layout_centerHorizontal="true"
                android:textSize="15dp"
                android:gravity="center_horizontal" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:background="@drawable/main_choose_border"
            android:layout_margin="10dp">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageButton1"
                android:src="@drawable/dumbbell_icon_96"
                android:layout_alignParentTop="true"
                android:background="@drawable/empty_bg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Тренировка"
                android:id="@+id/textView5"
                android:layout_below="@+id/imageButton1"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu_linear1"
        android:layout_alignParentStart="true"
        android:id="@+id/menu_linear2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:background="@drawable/main_choose_border"
            android:layout_margin="10dp" >

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageButton2"
                android:src="@drawable/dumbbell_icon_96"
                android:layout_alignParentTop="true"
                android:background="@drawable/empty_bg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Режим"
                android:id="@+id/textView6"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_below="@+id/imageButton2"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:background="@drawable/main_choose_border"
            android:layout_margin="10dp" >

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageButton3"
                android:src="@drawable/dumbbell_icon_96"
                android:layout_alignParentTop="true"
                android:background="@drawable/empty_bg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/textView7"
                android:layout_below="@+id/imageButton3"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu_linear2"
        android:layout_alignParentStart="true"
        android:id="@+id/menu_linear3"
        android:layout_marginBottom="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:background="@drawable/main_choose_border"
            android:layout_margin="10dp" >

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageButton4"
                android:src="@drawable/dumbbell_icon_96"
                android:layout_alignParentTop="true"
                android:background="@drawable/empty_bg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/textView8"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_below="@+id/imageButton4"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:background="@drawable/main_choose_border"
            android:layout_margin="10dp" >

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageButton5"
                android:src="@drawable/dumbbell_icon_96"
                android:layout_alignParentTop="true"
                android:background="@drawable/empty_bg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/textView9"
                android:layout_below="@+id/imageButton5"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@id/menu_linear3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:background="@drawable/main_menu_gradient">

    </LinearLayout>
</RelativeLayout>

</ScrollView>